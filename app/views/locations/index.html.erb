<% if @employee %>
    <h1> <%= @employee.username %>'s Locations </h1>
<% else %>
    <h1> Please Sign In or Sign Up </h1>
<% end %>


<% if @locations == [] %>
  <h5> This Employee Has No Measured Locations </h5>
  <% else %>
  <ul>
<% @locations.each do |loc|%>
  <li><%= loc.street_address %> - <%= link_to 'View', location_measurements_path(loc) %> - <%= link_to 'Edit', edit_employee_location_path(loc.employee_id, loc.id) %>
<% end %>
</ul>
<% end %>



