<h1><%= @location.street_address %></h1>
<h2><%= @location.city %>, <%= @location.state %></h2>

<p><%= link_to 'Add A New Measurement', new_measurement_path(@location)%></p>

<% if !@location.measurements.empty? %>
  <p><%= link_to 'See All Measurements', location_measurements_path(@location)%></p>
  <h4>Most Recent Measurements:</h4>
  <% @location.measurements.order(date: :desc).limit(3).each do |loc|%>
    <li>
      <strong><%= loc.employee.username%> - <%= loc.date %> - <%= link_to 'View', location_measurements_path(@location)%> </strong> 
    </li>
  <% end %>
  
<% end %>